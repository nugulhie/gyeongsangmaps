
<div class="container" >
<div class="row flex-lg-nowrap">
  <div class="col">
    <div class="row">
      <div class="col mb-3">
        <div class="card">
          <div class="card-body">
            <div class="e-profile" id="editProfile">
              <div class="row">
                <div class="col-xs-12 col-sm-3 center">
                  <div class="profile-picture">
                    <img src="/img/tempprofile.png" id="my_profile_image" alt="" style="width: 144px; height: 144px;">
                  </div>
                </div>
                <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                  <div class="text-center text-sm-left mb-2 mb-sm-0">
                    <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap" id='current_name'></h4>
                    <div class="mt-2">
                      <form action="upload" id="uploadForm" method="post" enctype="multipart/form-data">
                        <input type="file" class="file-select" name="photo1" id="photo_select" style="display:none" accept="image/*"/>
                      </form>
                      <button class="btn btn-primary" onclick="onclick=document.all.photo1.click()">사진 선택</button>
                      <button class="btn btn-primary" id="photo_submit">사진 등록</button>
                    </div>
                  </div>
                  <!-- <div class="text-center text-sm-right">
                    <div class="text-muted"><small>Joined 09 Dec 2017</small></div>
                  </div> -->
                </div>
              </div>
              <div class="tab-content pt-3">
                <div class="tab-pane active">
                  <form class="form" novalidate="">
                    <div class="row">
                      <div class="col">
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>이름</label>
                              <input class="form-control" type="text" name="name" placeholder="이름" id="my_name" value="">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>학과</label>
                              <input class="form-control" type="text" placeholder="학과" id="my_college" value="">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col mb-3">
                            <div class="form-group" id="current_context">
                              <label>프로필 설명</label>
                              <textarea class="form-control" rows="5" placeholder="프로필 설명" id="my_context"></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col d-flex justify-content-end">
                        <input class="btn-primary" type="button" onclick='update();' value="저장"/>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>